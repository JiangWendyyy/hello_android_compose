<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="@string/title"
            android:textSize="24sp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 第一个 Button -->
                <Button
                    android:id="@+id/toConstraintActivity"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_activity_button_height"
                    android:layout_marginTop="@dimen/main_activity_button_marginTop"
                    android:layout_marginStart="@dimen/main_activity_button_marginStart"
                    android:layout_marginEnd="@dimen/main_activity_button_marginStart"
                    android:backgroundTint="@color/gray"
                    android:text="@string/button1" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_activity_button_height"
                    android:layout_marginTop="@dimen/main_activity_button_marginTop"
                    android:layout_marginStart="@dimen/main_activity_button_marginStart"
                    android:layout_marginEnd="@dimen/main_activity_button_marginStart"
                    android:backgroundTint="@color/gray"
                    android:text="@string/button2" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_activity_button_height"
                    android:layout_marginTop="@dimen/main_activity_button_marginTop"
                    android:layout_marginStart="@dimen/main_activity_button_marginStart"
                    android:layout_marginEnd="@dimen/main_activity_button_marginStart"
                    android:backgroundTint="@color/gray"
                    android:text="@string/button3" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_activity_button_height"
                    android:layout_marginTop="@dimen/main_activity_button_marginTop"
                    android:layout_marginStart="@dimen/main_activity_button_marginStart"
                    android:layout_marginEnd="@dimen/main_activity_button_marginStart"
                    android:backgroundTint="@color/gray"
                    android:text="@string/button4" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_activity_button_height"
                    android:layout_marginTop="@dimen/main_activity_button_marginTop"
                    android:layout_marginStart="@dimen/main_activity_button_marginStart"
                    android:layout_marginEnd="@dimen/main_activity_button_marginStart"
                    android:backgroundTint="@color/gray"
                    android:text="@string/button5" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:backgroundTint="@color/gray"
                    android:text="@string/button6" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_activity_button_height"
                    android:layout_marginTop="@dimen/main_activity_button_marginTop"
                    android:layout_marginStart="@dimen/main_activity_button_marginStart"
                    android:layout_marginEnd="@dimen/main_activity_button_marginStart"
                    android:backgroundTint="@color/gray"
                    android:text="@string/button7" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_activity_button_height"
                    android:layout_marginTop="@dimen/main_activity_button_marginTop"
                    android:layout_marginStart="@dimen/main_activity_button_marginStart"
                    android:layout_marginEnd="@dimen/main_activity_button_marginStart"
                    android:backgroundTint="@color/gray"
                    android:text="@string/button8" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_activity_button_height"
                    android:layout_marginTop="@dimen/main_activity_button_marginTop"
                    android:layout_marginStart="@dimen/main_activity_button_marginStart"
                    android:layout_marginEnd="@dimen/main_activity_button_marginStart"
                    android:backgroundTint="@color/gray"
                    android:text="@string/button9" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_activity_button_height"
                    android:layout_marginTop="@dimen/main_activity_button_marginTop"
                    android:layout_marginStart="@dimen/main_activity_button_marginStart"
                    android:layout_marginEnd="@dimen/main_activity_button_marginStart"
                    android:backgroundTint="@color/gray"
                    android:text="@string/button10" />

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>